.chat-main
  .main-header
    .main-header__box
      %h2.main-header__box__group-name
        = @group.name
      %ul.main-header__box__member-list
        Member:
        - @group.group_users.each do |m|
          %li.main-header__box__member-list--name
            = m.user.name
    .edit-button
      = link_to edit_group_path(@group),class:"edit-button__name" do
        Edit
  .messages
    = render @messages
  .form
    = form_for [@group,@message] do |f|
      .new-message
        .input-box
          =f.text_field :content, class:"input-box__text",placeholder:"type a new message"
          = f.label :image, class:"input-box__image" do
            =icon('fas','image')
            = f.file_field :image, class:"input-box__image__file"
        =f.submit 'Send', class:"submit-button"